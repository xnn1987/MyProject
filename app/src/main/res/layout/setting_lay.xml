<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aixiyi_main_backgroud"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include layout="@layout/title_only_backicon_title" />
    <RelativeLayout
        android:id="@+id/message_pull_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_main_hight"
        android:background="@drawable/click_trasparent_selector">


        <TextView
            android:id="@+id/dingd_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aixiyi_normal_left"
            android:text="消息推送"
            android:textColor="@color/aixiyi_setting_gray"
            android:textSize="@dimen/aixiyi_normal" />

        <ToggleButton
            android:id="@+id/set_dd_tbtn"
            android:layout_width="48dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/aixiyi_normal_right"
            android:background="@android:color/transparent"
            android:button="@drawable/toggle_btn"
            android:checked="true"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>
    <include layout="@layout/main_line_lay"/>
    <RelativeLayout
        android:id="@+id/help_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_main_hight"
        android:background="@drawable/click_trasparent_selector">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aixiyi_normal_left"
            android:text="帮助中心"
            android:textColor="@color/aixiyi_setting_gray"
            android:textSize="@dimen/aixiyi_normal"  />

        <ImageView
            style="@style/Right_Icon_Gray_Img" />

    </RelativeLayout>
    <include layout="@layout/main_line_lay"/>
    <RelativeLayout
        android:id="@+id/about_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_main_hight"
        android:background="@drawable/click_trasparent_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aixiyi_normal_left"
            android:text="关于爱洗衣"
            android:textColor="@color/aixiyi_setting_gray"
            android:textSize="@dimen/aixiyi_normal"  />

        <ImageView
            style="@style/Right_Icon_Gray_Img" />
    </RelativeLayout>
    <include layout="@layout/main_line_lay"/>
    <RelativeLayout
        android:id="@+id/check_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_main_hight"
        android:background="@drawable/click_trasparent_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aixiyi_normal_left"
            android:text="@string/left_cversion"
            android:textColor="@color/aixiyi_setting_gray"
            android:textSize="@dimen/aixiyi_normal"  />

        <TextView
            android:id="@+id/version_txt"
            style="@style/Right_Txt"
            android:text="1.0"
         />
    </RelativeLayout>
    <include layout="@layout/main_line_lay"/>
</LinearLayout>