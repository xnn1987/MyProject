<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:color="@color/white"
   android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_item_hight"
        android:color="@color/white"
        >
    <ImageView
        android:id="@+id/help_img"
        android:layout_width="@dimen/aixiyi_item_hight"
        android:layout_height="@dimen/aixiyi_item_hight"
        android:layout_centerVertical="true"
        android:src="@mipmap/tbtix"/>
   <LinearLayout
       android:layout_toRightOf="@id/help_img"
       android:layout_marginLeft="21dp"
       android:layout_marginTop="27dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <TextView
           android:id="@+id/help_txt"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:textSize="@dimen/aixiyi_normal"
           android:textColor="@color/gray_txt"
           />
       <TextView
           android:id="@+id/help_content"
           android:layout_marginTop="8dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/aixiyi_normal"
           android:textColor="@color/light_gray"
           android:singleLine="true"
          />
   </LinearLayout>
    <ImageView
        style="@style/Right_Icon_Img"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_divider_hight"
        android:background="@color/aixiyi_main_backgroud"/>
</LinearLayout>