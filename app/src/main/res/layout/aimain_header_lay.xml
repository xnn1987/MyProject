<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/aixiyi_main_backgroud"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/homeFM_vp_View"
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <com.cn.aixiyi.myview.MyPagerGalleryView
            android:id="@+id/roll_view_pager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/homeTitle_ll_ovalLayout1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/shaoyishao_lay"
            android:layout_width="0dp"
            android:layout_height="@dimen/aixiyi_main_mddle_hight"
            android:layout_marginLeft="11dp"
            android:layout_weight="1"
            android:background="@drawable/click_trasparent_selector_two">

            <ImageView
                android:id="@+id/ai_sys_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_top"
                android:background="@drawable/click_saoyisao_selector" />

            <TextView
                android:id="@+id/ai_sys_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ai_sys_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_top2"
                android:text="@string/main_sys"
                android:textColor="@drawable/click_txt_selector"
                android:textSize="@dimen/aixiyi_normal_little" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/washing_lay"
            android:layout_width="0dp"
            android:layout_height="@dimen/aixiyi_main_mddle_hight"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/click_trasparent_selector_two">

            <ImageView
                android:id="@+id/ai_xiyi_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_top"
                android:background="@drawable/click_xiyi_selector" />

            <TextView
                android:id="@+id/ai_xiyi_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ai_xiyi_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_top2"
                android:text="@string/main_xiyi"
                android:textColor="@drawable/click_txt_selector"
                android:textSize="@dimen/aixiyi_normal_little" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dingdan_lay"
            android:layout_width="0dp"
            android:layout_height="@dimen/aixiyi_main_mddle_hight"
            android:layout_marginRight="11dp"
            android:layout_weight="1"
            android:background="@drawable/click_trasparent_selector_two">

            <ImageView
                android:id="@+id/ai_dingdan_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_top"
                android:background="@drawable/click_dingdan_selector" />

            <TextView
                android:id="@+id/ai_dingdan_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ai_dingdan_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_margin_top2"
                android:text="@string/main_dingdan"
                android:textColor="@drawable/click_txt_selector"
                android:textSize="@dimen/aixiyi_normal_little" />

            <ImageView
                android:id="@+id/ai_dingdanicon_img"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/yuandian" />
        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/main_life"
        android:textColor="@color/aixiyi_center_txt_blue"
        android:textSize="@dimen/aixiyi_normal" />
</LinearLayout>