<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.cn.aixiyi.myview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wasching_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_launcher"
        app:border_color="#FFffffff"
        app:border_width="1dp" />
    <LinearLayout
        android:layout_toRightOf="@id/wasching_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/waching_style_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="富源居1号机"
            android:textSize="16sp"
            android:textColor="@color/gray_txt"/>
        <TextView
            android:id="@+id/waching_state_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="空闲"
            android:textSize="@dimen/aixiyi_normal"
            android:textColor="@color/gray_txt"/>
        <TextView
            android:id="@+id/waching_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="旧市头7巷2号富源居"
            android:textSize="@dimen/aixiyi_normal"
            android:textColor="@color/gray_txt"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"


      >
        <Button
            android:id="@+id/skip_btn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="预定"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_margin_10"
            android:background="@drawable/btn_shape_coners_orange"/>
        <TextView
            android:layout_below="@id/skip_btn"
            android:id="@+id/waching_floor_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="06楼"
            android:textSize="@dimen/aixiyi_normal"
            android:textColor="@color/gray_txt"
            android:layout_marginRight="@dimen/common_margin_10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>