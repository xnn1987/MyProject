<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <RelativeLayout
        android:id="@+id/help_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_main_hight"
        android:layout_marginTop="@dimen/common_margin_top"
        android:background="@drawable/click_trasparent_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aixiyi_normal_left"
            android:text="如何下单"
            android:textColor="@color/aixiyi_setting_gray"
            android:textSize="@dimen/aixiyi_normal"/>

        <ImageView style="@style/Right_Icon_Gray_Img" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip" />

    <RelativeLayout
        android:id="@+id/about_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_main_hight"
        android:background="@drawable/click_trasparent_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/aixiyi_normal_left"
            android:text="洗衣介绍"
            android:textColor="@color/aixiyi_setting_gray"
            android:textSize="@dimen/aixiyi_normal" />

        <ImageView style="@style/Right_Icon_Gray_Img" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip" />
</LinearLayout>