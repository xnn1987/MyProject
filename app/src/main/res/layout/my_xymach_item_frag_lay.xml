<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/left_ads_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/aixiyi_item_hight"
        android:background="@drawable/click_trasparent_selector">

        <ImageView
            android:id="@+id/left_xxadds_img"
            android:layout_width="@dimen/aixiyi_control_width1"
            android:layout_height="@dimen/aixiyi_control_width1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/my_save_xiyiji"  />

        <TextView
            android:id="@+id/left_xxadds_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/aixiyi_normal_left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/left_xxadds_img"
            android:text="广轻工东区1栋"
            android:textColor="@color/aixiyi_setting_gray"
            android:textSize="14sp"/>
        <ImageView
            style="@style/Right_Icon_Img"
            android:layout_marginRight="@dimen/aixiyi_normal_right"
            android:background="@mipmap/jiantou_right"/>
    </RelativeLayout>
</LinearLayout>