<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/aixiyi_main_backgroud"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/aixiyi_main_hight"
                    android:layout_marginLeft="@dimen/aixiyi_normal_left">

                    <TextView
                        android:id="@+id/chongz_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="充值"
                        android:textColor="@color/aixiyi_setting_gray"
                        android:textSize="@dimen/aixiyi_normal" />

                    <TextView
                        android:id="@+id/chongz_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@id/chongz_title"
                        android:text="（1元=1添财贝）"
                        android:textColor="@color/aixiyi_yan_yellow"
                        android:textSize="@dimen/aixiyi_normal" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/aixiyi_normal_left"
                    android:layout_marginRight="@dimen/aixiyi_normal_right"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/one_lay"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/aixiyi_re_width"
                        android:layout_marginRight="@dimen/aixiyi_re_hight"
                        android:layout_weight="1"
                        android:background="@drawable/click_trasparent_selector"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/one_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="20元"
                            android:textColor="@color/aixiyi_center_txt_blue"
                            android:textSize="@dimen/aixiyi_big" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/two_lay"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/aixiyi_re_width"
                        android:layout_marginRight="@dimen/aixiyi_re_hight"
                        android:layout_weight="1"
                        android:background="@drawable/click_trasparent_selector"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/two_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="50元"
                            android:textColor="@color/aixiyi_center_txt_blue"
                            android:textSize="@dimen/aixiyi_big" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/aixiyi_normal_left"
                    android:layout_marginRight="@dimen/aixiyi_normal_right"
                    android:layout_marginTop="@dimen/aixiyi_normal_left1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/three_lay"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/aixiyi_re_width"
                        android:layout_marginRight="@dimen/aixiyi_re_hight"
                        android:layout_weight="1"
                        android:background="@drawable/click_trasparent_selector"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/three_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="100元"
                            android:textColor="@color/aixiyi_center_txt_blue"
                            android:textSize="@dimen/aixiyi_big" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/four_lay"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/aixiyi_re_width"
                        android:layout_marginRight="@dimen/aixiyi_re_hight"
                        android:layout_weight="1"
                        android:background="@drawable/click_trasparent_selector"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/four_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="200元"
                            android:textColor="@color/aixiyi_center_txt_blue"
                            android:textSize="@dimen/aixiyi_big" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/aixiyi_normal_left"
                    android:layout_marginRight="@dimen/aixiyi_normal_right"
                    android:layout_marginTop="@dimen/aixiyi_normal_left1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/five_lay"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/aixiyi_re_width"
                        android:layout_marginRight="@dimen/aixiyi_re_hight"
                        android:layout_weight="1"
                        android:background="@drawable/click_trasparent_selector"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/five_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="300元"
                            android:textColor="@color/aixiyi_center_txt_blue"
                            android:textSize="@dimen/aixiyi_big" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/six_lay"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/aixiyi_re_width"
                        android:layout_marginRight="@dimen/aixiyi_re_hight"
                        android:layout_weight="1"
                        android:background="@drawable/click_trasparent_selector"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/six_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="500元"
                            android:textColor="@color/aixiyi_center_txt_blue"
                            android:textSize="@dimen/aixiyi_big" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/aixiyi_main_hight"
                    android:layout_marginLeft="@dimen/aixiyi_normal_left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="请选择支付方式"
                        android:textColor="@color/aixiyi_setting_gray"
                        android:textSize="@dimen/aixiyi_normal" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/aixiyi_main_hight"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/weixin_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/aixiyi_normal_left"
                        android:background="@mipmap/my_qianbao_weixin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/aixiyi_normal_left"
                        android:layout_toRightOf="@id/weixin_img"
                        android:text="微信支付"
                        android:textColor="@color/aixiyi_setting_gray"
                        android:textSize="@dimen/aixiyi_normal" />

                    <RadioButton
                        android:id="@+id/weixin_rtn"
                        android:layout_width="@dimen/aixiyi_normal_left"
                        android:layout_height="@dimen/aixiyi_normal_left"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/aixiyi_normal_right"
                        android:background="@drawable/taxes_second_rbtn_selector"
                        android:button="@null"
                        android:checked="true" />
                </RelativeLayout>

                <include layout="@layout/main_line_lay" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/aixiyi_main_hight"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/zhifubao_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/aixiyi_normal_left"
                        android:background="@mipmap/my_qianbao_zhifubao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/aixiyi_normal_left"
                        android:layout_toRightOf="@id/zhifubao_img"
                        android:text="支付宝"
                        android:textColor="@color/aixiyi_setting_gray"
                        android:textSize="@dimen/aixiyi_normal" />

                    <RadioButton
                        android:id="@+id/zhifubao_rtn"
                        android:layout_width="@dimen/aixiyi_normal_left"
                        android:layout_height="@dimen/aixiyi_normal_left"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/aixiyi_normal_right"
                        android:background="@drawable/taxes_second_rbtn_selector"
                        android:button="@null"
                         />
                </RelativeLayout>

                <Button
                    android:id="@+id/gz_result_btn"
                    android:layout_width="@dimen/aixiyi_btn_width"
                    android:layout_height="@dimen/aixiyi_btn_hight"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/aixiyi_item_hight1"
                    android:layout_marginBottom="@dimen/aixiyi_normal_left"
                    android:background="@drawable/register_result_btn"
                    android:text="确定支付"
                    android:textColor="@color/white"
                    android:textSize="@dimen/aixiyi_normal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>