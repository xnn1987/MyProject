<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="230dp"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_layout_shape">
       <ImageView
           android:id="@+id/delete_img"
           android:layout_width="@dimen/common_margin_top4"
           android:layout_height="@dimen/common_margin_top4"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/common_margin_top3"
           android:layout_marginTop="@dimen/common_margin_top3"
            android:src="@mipmap/detial_cancle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/aixiyi_item_hight1"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/aixiyi_normal_big"
                android:text="支付"
                android:textStyle="bold"
                android:textColor="@color/aixiyi_setting_gray"
                android:textSize="@dimen/aixiyi_normal_big" />
            <include
                layout="@layout/main_line_lay"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_gravity="center"
                android:text="为此次洗衣支付"
                android:textColor="@color/aixiyi_setting_gray"
                android:textSize="@dimen/aixiyi_normal" />
            <TextView
                android:id="@+id/num_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_margin_top4"
                android:text="￥4.00"
                android:textStyle="bold"
                android:textColor="@color/aixiyi_center_txt_blue"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/yuer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_margin_top3"
                android:text="余额：￥10:00"
                android:textColor="@color/aixiyi_qianbao_lightgray"
                android:textSize="@dimen/aixiyi_small" />
            <View
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_margin_status"
                android:background="@color/aixiyi_saveline_gray"/>

            <TextView
                android:id="@+id/ensure_txt"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/common_margin_top"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/order_start_btn"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="@dimen/aixiyi_normal"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>