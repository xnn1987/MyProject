<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aixiyi_main_backgroud"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_only_backicon_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aixiyi_normal_left1"
                android:layout_marginRight="@dimen/aixiyi_normal_left1"
                android:layout_marginTop="11dp"
                android:text="洗衣"
                android:textColor="@color/aixiyi_setting_gray"
                android:textSize="@dimen/aixiyi_normal" />

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aixiyi_normal_left1"
                android:layout_marginRight="@dimen/aixiyi_normal_left1"
                android:layout_marginTop="9dp"
                android:text="2016-10-26"
                android:textColor="@color/aixiyi_wash_gray"
                android:textSize="@dimen/aixiyi_normal"  />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aixiyi_normal_left1"
                android:layout_marginRight="@dimen/aixiyi_normal_left1"
                android:layout_marginTop="@dimen/common_margin_top"
                android:layout_marginBottom="@dimen/common_margin_top"
                android:text="洗衣洗衣洗衣洗衣洗衣洗衣洗衣洗衣洗衣"
                android:textColor="@color/aixiyi_setting_gray"
                android:textSize="@dimen/aixiyi_normal"  />
        </LinearLayout>
    </ScrollView>
</LinearLayout>